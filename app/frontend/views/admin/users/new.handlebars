<!DOCTYPE html>

<h1 class="form-admin-title">Admin / Users / New User</h1>


<input id="new-user-id" type="hidden" name="" value="{{userData._id}}">

<form class="new-user form-admin"  method="post">

	<div class="info-container">
		<label for="fullName">Full Name</label>
		<input type="text" name="fullName"  placeholder="fullName" >
	</div>

	<div class="info-container">
		<label for="email">Email</label>
		<input type="text" name="email"  placeholder="email">
	</div>

	<div class="info-container">
		<label for="profession">Profession</label>
		<input type="text" name="profession"  placeholder="profession" >
	</div>

	<div class="info-container">
		<label for="imageUrl">imageUrl</label>
		<input type="text" name="imageUrl"  placeholder="imageUrl" >
	</div>

	<div class="info-container">
		<label for="backgroundImageUrl">backgroundImageUrl</label>
		<input type="text" name="backgroundImageUrl"  placeholder="backgroundImageUrl" >
	</div>

	<div class="info-container">
		<label for="organisation">Organisation</label>
		<input type="text" name="organisation"  placeholder="organisation" >
	</div>

	<div class="info-container">
		<label for="location">Location</label>
		<input type="text" name="location"  placeholder="location" >
	</div>

	<div class="info-container">
		<label for="bio">Bio</label>
		<textarea type="text" name="bio"  placeholder="bio" ></textarea>
	</div>

	<div class="info-container">
		<label>article</label>
		<select multiple class="articles" name="articles">

			{{#each articleData }}
			<option value="{{_id}}" > {{title}}</option>
			{{/each}}

		</select>
	</div>

	<div class="info-container">
		<label>Tag the user</label>
		<select multiple class="tags" name="tags">
			{{#each tagData }}
			<option value="{{_id}}" {{selected _id ../userData._tags}}> {{name}}</option>
			{{/each}}
		</select>
	</div>



