<div class="video-page">
	<div class="close-modal close-modal-white"><i class="fa fa-times" aria-hidden="true"></i></div>
	<div class="video">
		<iframe width="100%" height="100%" src="{{url}}" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
	</div>
	<div class="share-tickets-wrapper">

		<div class="video-title">
			{{ videoData.title }}
		</div>

		<div class="share-links">
			<div class="share-video">
				SHARE VIDEO
			</div>
			<div class="links-container">
				<div class="icons-container">
					<i class="fa fa-twitter" aria-hidden="true"></i>
				</div>

				<div class="icons-container">
					<i class="fa fa-facebook" aria-hidden="true"></i>
				</div>

				<div class="icons-container linkedin">
					<i class="fa fa-linkedin" aria-hidden="true"></i>
				</div>

				<div class="icons-container">
					<i class="fa fa-instagram" aria-hidden="true"></i>
				</div>

			</div>
		</div>

	</div>

	<div class="video-speaker-wrapper">

		<div class="titles-wrapper">
			<div class="title">SPEAKER</div>


			<div class="title details">DETAILS</div>
		</div>

		<div class="speaker-wrapper">
			<div class="speaker speaker-list">

				{{> speaker-card fullName=videoData._speakers.[0].fullName profession=videoData._speakers.[0].profession location=videoData._speakers.[0].location  imageUrl=videoData._speakers.[0].imageUrl  }}

			</div>

			<div class="video-desc">
				<div class="text">
				</div>

				<div class="hubs">
					<h4>HUBS</h4>
					{{#each videoData._hubs}}
					{{> hub-button title=name}}
					{{/each}}
				</div>
			</div>
		</div>
	</div>

	<div class="more-from"> MORE FROM {{mainSpeakerData.fullName}}</div>
	{{> card-slider content-title="Videos" fa-choice="fa-chevron-right"}}
	<div class="arrow-container">
		<div class="leftArrow hidden"><i class=" fa fa-chevron-left" aria-hidden="true" i></i></div>
		<div class="video-list card-list">

			{{#each mainSpeakerData._videos}}
			{{> video-card videoTitle=title videoImage=videoImage}}
			{{/each}}

		</div>
		<div class="rightArrow"><i class=" fa fa-chevron-right" aria-hidden="true" i></i></div>
	</div>


	{{> card-slider content-title="Articles"   fa-choice="fa-chevron-right"}}
	<div class="arrow-container">
		<div class="leftArrow hidden"><i class=" fa fa-chevron-left" aria-hidden="true" i></i></div>

		<div class="video-list card-list">
			{{#each mainSpeakerData._articles }}
			{{> article-card title=title imageUrl=imageUrl url=url}}
			{{/each}}
		</div>

		<div class="rightArrow"><i class=" fa fa-chevron-right" aria-hidden="true" i></i></div>
	</div>


	<div class="related-content-title">RELATED CONTENT</div>

	<div class="related-content videos-container events-container">
		{{> card-slider content-title="Related"   fa-choice="fa-chevron-right"}}

		<div class="arrow-container">
			<div class="leftArrow hidden"><i class=" fa fa-chevron-left" aria-hidden="true" i></i></div>
			<div class="video-list event-list card-list">

				{{eventData.[0].name}}

				{{#if eventsData}}
				{{#each eventsData}}
				{{> event-card title=name location=location eventImage=imageFileName _id=_id}}
				{{/each}}
				{{/if}}

				{{#if videosData}}
				{{#each videosData }}
				{{> video-card videoTitle=title videoLength=duration videoImage=videoImage _id =_id }}
				{{/each}}
				{{/if}}

				{{#if speakersData}}
				{{#each speakersData}}
				{{> speaker-card fullName=fullName profession=profession location=location nationality=nationality imageUrl=imageUrl _id=id }}
				{{/each}}
				{{/if}}

				{{#if articlesData}}
				{{#each articlesData }}
				{{> article-card title=title imageUrl=imageUrl url=url}}
				{{/each}}
				{{/if}}




			</div>
			<div class="rightArrow"><i class=" fa fa-chevron-right" aria-hidden="true" i></i></div>
		</div>

	</div>


</div>
