<!DOCTYPE html>
<h1 class="form-admin-title">Admin / Articles / Edit Article</h1>


<input id="edit-article-id" type="hidden" name="" value="{{articleData._id}}">

<form class="edit-article form-admin"  method="post">

	<div class="info-container">
		<label for="title">Title</label>
		<input type="text" name="title"  placeholder="name" value="{{articleData.title}}">
	</div>

	<div class="info-container">
		<label for="url">url</label>
		<input type="text" name="url"  placeholder="url" value="{{articleData.url}}">
	</div>



	<div class="info-container">
		<label for="imageUrl">ImageUrl</label>
		<input type="text" name="imageUrl"  placeholder="imageUrl" value="{{articleData.imageUrl}}">
	</div>



	<button class="admin-post-btn" type="submit" >Post edit article</button>

</form>
