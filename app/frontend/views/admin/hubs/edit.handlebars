<!DOCTYPE html>
<h1 class="form-admin-title">Admin / Hubs / Edit Hub</h1>


<input id="edit-hub-id" type="hidden" name="" value="{{hubData._id}}">

<form class="edit-hub form-admin"  method="post">

	<div class="info-container">
		<label for="name">Title</label>
		<input class="name" type="text" name="name"  placeholder="name" value="{{hubData.name}}">
	</div>

	<div class="info-container">
		<label for="slug">slug</label>
		<input type="text" name="slug"  placeholder="slug" value="{{hubData.slug}}">
	</div>

	<div class="info-container">
		<label for="imageUrl">imageUrl</label>
		<input type="text" name="imageUrl"  placeholder="imageUrl" value="{{hubData.imageUrl}}">
	</div>

	<div class="info-container">
		<label>Speakers</label>
		<select multiple class="multiple-select-admin speakers" name="speakers">

			{{#each userData }}
			<option value="{{_id}}" {{selected _id ../hubData._speakers}}> {{fullName}}</option>
			{{/each}}

		</select>
	</div>

	<div class="info-container">
		<label>Organisers</label>
		<select class="organiser" name="organiser">

			{{#each userData }}
			<option value="{{_id}}" {{selected _id ../hubData._organisers}}> {{fullName}}</option>
			{{/each}}

		</select>
	</div>


	<div class="info-container">
		<label>article</label>
		<select multiple class="multiple-select-admin articles" name="articles">

			{{#each articleData }}
			<option value="{{_id}}" {{selected _id ../hubData._articles}}> {{title}}</option>
			{{/each}}

		</select>
	</div>

	<div class="info-container">
		<label>Tags</label>
		<select multiple class="multiple-select-admin tags" name="tags">

			{{#each tagData }}
			<option value="{{_id}}" {{selected _id ../hubData._tags}}> {{name}}</option>
			{{/each}}

		</select>
	</div>

	<div class="info-container">
		<label>Videos</label>
		<select multiple class="multiple-select-admin videos" name="videos">

			{{#each videoData }}
			<option value="{{_id}}"> {{title}}</option>
			{{/each}}

		</select>
	</div>

	<div class="info-container">
		<label>Events</label>
		<select multiple class="multiple-select-admin events" name="events">

			{{#each eventData }}
			<option value="{{_id}}" {{selected _id ../hubData._events}}> {{name}}</option>
			{{/each}}

		</select>
	</div>


	<button class="admin-post-btn" type="submit" >Edit hub</button>

</form>
