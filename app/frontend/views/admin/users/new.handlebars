	{{/each}}

</select> --}}

<div class="info-container">
	<label>Videos</label>

	<select multiple class="videos" name="videos">
		{{#each videoData }}
		<option value="{{_id}}" {{selected _id ../userData._videos}}> {{title}}</option>
		{{/each}}
	</select>
</div>


<div class="info-container">
	<label>Organising events</label>

	<select multiple class="organising-events" name="events">

		{{#each eventData }}
		<option value="{{_id}}" {{selected _id ../userData.events._organising}}> {{name}}</option>
		{{/each}}

	</select>
</div>


<div class="info-container">

	<label>Speaking at events</label>

	<select multiple class="speaking-events" name="events">

		{{#each eventData }}
		<option value="{{_id}}" {{selected _id ../userData.events._speaking}}> {{name}}</option>
		{{/each}}

	</select>

</div>



<button class="admin-post-btn" type="submit" >Post new user</button>

</form>
